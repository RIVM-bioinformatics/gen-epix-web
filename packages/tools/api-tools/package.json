{
  "name": "@gen_epix/api-tools",
  "version": "0.0.1",
  "license": "EUPL-1.2",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint ./src --report-unused-disable-directives --max-warnings 0",
    "check-types": "tsc --noemit",
    "process-api": "npm run _load-api-spec && npm run _run-openapi-generator && npm run _create-api-package",
    "_load-api-spec": "vite-node ./src/loadApiSpec.ts",
    "_run-openapi-generator": "openapi-generator-cli generate -i ../../../api.sanitized.json -g typescript-axios --additional-properties=\"enumPropertyNaming=original\" -o generated-api",
    "_create-api-package": "vite-node --loader ts-node/esm ./src/createApiPackage.ts"
  },
  "dependencies": {
    "@openapitools/openapi-generator-cli": "2.20.2",
    "@gen_epix/tools-lib": "*",
    "fs-extra": "11.3.0",
    "node-fetch": "3.3.2",
    "openapi-types": "12.1.3"
  },
  "devDependencies": {
    "@gen_epix/eslint-config": "*",
    "@gen_epix/typescript-config": "*",
    "@types/fs-extra": "11.0.4",
    "@types/node": "22.15.23",
    "eslint": "9.27.0",
    "typescript": "5.8.3",
    "vite-node": "3.1.4"
  }
}