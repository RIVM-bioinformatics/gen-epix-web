{
  "name": "gen-epic-web",
  "version": "0.0.13",
  "packageManager": "npm@11.2.0",
  "license": "EUPL-1.2",
  "private": true,
  "workspaces": [
    "packages/tools/*",
    "packages/config/*",
    "packages/core",
    "packages/api",
    "packages/demo-client"
  ],
  "scripts": {
    "start": "npm run dev -w @gen_epix/demo-client",
    "test": "lerna run test --stream --no-bail",
    "test-run": "lerna run test-run --stream",
    "lint": "lerna run lint --stream --no-bail",
    "lint-fix": "lerna run lint-fix --stream --no-bail",
    "check-types": "lerna run check-types --stream --no-bail",
    "build": "npm run build -w @gen_epix/core",
    "build-tools": "npm run build -w @gen_epix/tools-lib && npm run build -w @gen_epix/reconfigure-package && npm run build -w @gen_epix/generate-license-manifest && npm run build -w @gen_epix/oidc-mock-server",
    "clean": "lerna clean && rm -fr node_modules",
    "validate-all": "npm run lint && npm run check-types && npm run test-run",
    "generate-license-manifest": "generate-license-manifest packages/demo-client/public",
    "start-oidc-mock-server": "nodemon --watch ./oidc-mock-server.config.json ./node_modules/.bin/oidc-mock-server",
    "publish-core": "npm run build -w @gen_epix/core && reconfigure-package packages/core pre && npm publish --access=public -w @gen_epix/core && reconfigure-package packages/core post"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "12.0.1",
    "@semantic-release/release-notes-generator": "14.0.3",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "lerna": "8.2.2",
    "ndjson-to-json": "1.1.0",
    "nodemon": "3.1.10",
    "semantic-release": "24.2.3",
    "semantic-release-ado": "1.4.0"
  },
  "release": {
    "branches": [
      "main",
      "hotfix/*"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer"
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore: released by release pipeline ${nextRelease.version} [ci skip]"
        }
      ],
      [
        "semantic-release-ado",
        {
          "varName": "nextRelease",
          "setOnlyOnRelease": false,
          "isOutput": true
        }
      ]
    ]
  }
}